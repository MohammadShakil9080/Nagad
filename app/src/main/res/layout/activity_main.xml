<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffffff"
    tools:context=".MainActivity">

    
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/nagod">

        <ImageView
            android:layout_width="29dp"
            android:layout_height="32dp"
            android:src="@drawable/icon3"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>


            <ImageView
                android:layout_width="52dp"
                android:layout_height="32dp"
                android:src="@drawable/bell3"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="নগদ"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:background="@drawable/two_color_curved"
            android:orientation="horizontal"
            >


            <ImageView
                android:layout_width="27dp"
                android:layout_height="20dp"
                android:layout_marginRight="2dp"
                android:padding="2dp"
                android:src="@drawable/saka"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:text="ব্যালেন্স জানতে ট্যাপ করুন"
                android:textColor="#cc5500"
                android:background="@drawable/custombutton"
                android:textSize="15dp"
                android:textStyle="bold"/>






        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:background="@drawable/custom"
        android:layout_marginTop="179dp"
        >

        <LinearLayout
            android:layout_width="159dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/mtp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/m2p"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mtp"
                    android:text="এম টু পি"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#aaaaaa"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#aaaaaa"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_weight="1"
                android:orientation="vertical">



                <ImageView
                    android:id="@+id/otp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/shadhin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/otp"
                    android:text="স্বাধীন"
                    android:textSize="16sp"
                    android:layout_centerHorizontal="true"/>


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#aaaaaa"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#aaaaaa"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/ntp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/biboroni"
                    android:layout_centerInParent="true"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="বিবরণী"
                    android:layout_below="@+id/ntp"
                    android:textSize="16sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#aaaaaa"/>



            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="159dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <ImageView
                    android:id="@+id/ctp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/setelment"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="সেটেলমেন্ট"
                    android:layout_below="@+id/ctp"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:layout_centerHorizontal="true"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#aaaaaa"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <ImageView
                    android:id="@+id/btp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/nibondhan"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="নিবন্ধন"
                    android:layout_below="@+id/btp"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:layout_centerHorizontal="true"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#aaaaaa"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/atp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/nibondhan"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="বিল পে"
                    android:layout_below="@+id/atp"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:layout_centerHorizontal="true"/>


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>